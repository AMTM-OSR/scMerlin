#!/bin/sh
#shellcheck disable=SC2039
trap '' SIGHUP

while true; do
	top -b -n 1 | tail -n +5 | head -n -1 | sed 's/S </S</g' | \
awk -F" " -v OFS=',' '{printf "%s,%s,%s,%s,%s,%s,%s,%s,", $1,$2,$3,$4,gensub(/m([^\s\\])/,"m,\\1","g",$5),$6,$7,$8;for(i=9; i<=NF; ++i) printf "%s ", $i; print ""}' | \
sed 's/,$//g;s/S</S </g' > /tmp/scmerlin-top
	sleep 3
done
